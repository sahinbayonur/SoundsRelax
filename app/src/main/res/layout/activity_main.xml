<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sahinbay.voice.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:layout_weight="1">

        <ToggleButton
            android:id="@+id/whitenoisebutton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_toggle_selector"
            android:textOff=""
            android:textOn=""
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="247dp" />

        <SeekBar
            android:id="@+id/whiteVolumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whitenoisebutton"
            android:layout_marginTop="10dp"
            android:max="80" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:layout_weight="1">

        <ToggleButton
            android:id="@+id/pinknoisebutton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Button"
            android:background="@drawable/custom_toggle_selector"
            android:textOff=""
            android:textOn=""
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="247dp" />

        <SeekBar
            android:id="@+id/pinkVolumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pinknoisebutton"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:layout_weight="1">

        <ToggleButton
            android:id="@+id/brownnoisebutton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Button"
            android:background="@drawable/custom_toggle_selector"
            android:textOff=""
            android:textOn=""
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="247dp" />

        <SeekBar
            android:id="@+id/brownVolumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brownnoisebutton"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>